{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "customDatasources": {
        "apache-nifi": {
            "defaultRegistryUrlTemplate": "http://localhost:3000/nifi-latest-version",
            "transformTemplates": []
        }
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^Dockerfile$"
            ],
            "matchStrings": [
                "ARG NIFI_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
            ],
            "datasourceTemplate": "custom.apache-nifi",
            "depNameTemplate": "apache-nifi"
        }
    ],
    "postUpgradeTasks": {
        "fileFilters": [
            "^Dockerfile$",
            "^nifi-\\d+\\.\\d+\\.\\d+-bin\\.zip\\.(asc|sha512)$"
        ],
        "commands": [
            "./update-checksum.sh"
        ],
        "executionMode": "update"
    },
    "enabledManagers": [
        "custom.regex"
    ]
}
