{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^Dockerfile$"
            ],
            "matchStrings": [
                "ARG NIFI_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
            ],
            "datasourceTemplate": "github-tags",
            "packageNameTemplate": "apache/nifi"
        }
    ],
    "postUpgradeTasks": {
        "fileFilters": [
            "Dockerfile",
            "nifi-*-bin.zip.{asc,sha512}"
        ],
        "commands": [
            "./update-checksum.sh"
        ],
        "executionMode": "update"
    },
    "enabledManagers": [
        "custom.regex"
    ]
}
