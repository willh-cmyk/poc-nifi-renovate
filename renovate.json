{
    "customDatasources": {
        "apache-nifi": {
            "defaultRegistryUrlTemplate": "http://localhost:3000/nifi-latest-version",
            "transformTemplates": [
                "$.version"
            ]
        }
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^Dockerfile$"
            ],
            "matchStrings": [
                "ARG NIFI_VERSION=(?<currentValue>[\\d\\.]+[-\\w]*)"
            ],
            "datasourceTemplate": "apache-nifi",
            "depNameTemplate": "apache/nifi",
            "versioningTemplate": "npm"
        }
    ],
    "postUpgradeTasks": {
        "fileFilters": [
            "Dockerfile"
        ],
        "commands": [
            "./update-checksum.sh"
        ],
        "executionMode": "update"
    },
    "enabledManagers": [
        "custom.regex"
    ]
}
